    <div class="card mt-5">
        <div class="card-header">
            <h2>Criação de usuário</h2>
        </div>
        <div class="card-body">
            <form action="/users/create" method="POST">
                <label>E-mail:</label>
                <input class="form-control" name="email" type="email" placeholder="email@exemplo.com"><br>
